---
interface Props {
  label: string;
  link: string;
}

const { label, link } = Astro.props;
---

<a href={link}>{label}</a>

<style>
  a {
    display: block;
    position: relative;
    padding-top: 1em;
    padding-bottom: 1em;
    color: var(--color-p-font);
    text-decoration: none;
    width: 100%;
    text-align: center;
    letter-spacing: 0.1em;
  }
  a::before {
    position: absolute;
    content: "";
    top: 3px;
    left: 3px;
    border: 2px solid var(--color-s-border);
    z-index: -2;
    width: 100%;
    height: 100%;
    transition: 0.2s;
    transition-property: background-color color;
  }
  a::after {
    position: absolute;
    content: "";
    top: -3px;
    left: -3px;
    z-index: -1;
    background-color: transparent;
    border: 2px solid var(--color-p-border);
    width: 100%;
    height: 100%;
    transition: 0.2s;
    transition-property: background-color color;
  }
  a:hover {
    color: #fff;
  }
  a:hover::before {
    top: -3px;
    left: -3px;
    z-index: -1;
    background-color: var(--color-s-bg);
  }
  a:hover::after {
    top: 3px;
    left: 3px;
    z-index: -2;
    background-color: var(color-s-bg);
  }
</style>
